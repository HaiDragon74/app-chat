<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeReceiver"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"/>

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        app:cardCornerRadius="5dp"
        android:layout_below="@id/timeReceiver"
        android:id="@+id/img1Img2Receiver"
        android:layout_marginLeft="50dp"
        android:visibility="gone"
        android:layout_alignParentLeft="true"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_margin="2dp"
                android:id="@+id/imgOneInsertReceiver" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:visibility="gone"
                android:id="@+id/imgTowInsertReceiver" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/imgCheckReceiver"
        android:padding="2dp"
        android:visibility="gone"
        android:background="@drawable/bck_send"
        android:src="@drawable/check_24"
        android:layout_alignBottom="@id/txtReceiver"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/img1Img2Receiver"
        android:layout_marginLeft="50dp"
        android:maxLines="100"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/message_back_background"
        android:id="@+id/txtReceiver"
        android:padding="5dp"
        android:text="message"/>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardView"
        android:layout_below="@id/img1Img2Receiver"
        android:layout_marginTop="5dp"
        android:layout_alignBottom="@id/txtReceiver"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        app:cardCornerRadius="200dp">

        <ImageView
            android:id="@+id/imgReceiver"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avt" />
    </androidx.cardview.widget.CardView>


</RelativeLayout>